<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.eleith.calchoochoo.fragments.DestinationSourceFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/primary_material_light">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="12dp"
                android:text="From "
                android:textColor="@color/background_material_light"/>

            <EditText
                android:id="@+id/trip_filter_source"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:backgroundTint="@color/background_material_light"
                android:focusable="false"
                android:text="select a caltrain stop"
                android:textColor="@color/background_material_light"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="12dp"
                android:text="To "
                android:textColor="@color/background_material_light"/>

            <EditText
                android:id="@+id/trip_filter_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:backgroundTint="@color/background_material_light"
                android:focusable="false"
                android:text="select a caltrain stop"
                android:textColor="@color/background_material_light"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/trip_filter_method_arriving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="12dp"
                android:text="Arriving "
                android:textColor="@color/background_material_light"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/trip_filter_method_departing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="12dp"
                android:text="Departing "
                android:textColor="@color/background_material_light"/>

            <EditText
                android:id="@+id/trip_filter_datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:backgroundTint="@color/background_material_light"
                android:focusable="false"
                android:text="10/2/17 @ 5:19pm"
                android:textColor="@color/background_material_light"/>
        </TableRow>

    </TableLayout>

</FrameLayout>
